{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)", 
        "dest": "/backend/dist/$1"
      },
      {
        "src": "/(.*)", 
        "dest": "/frontend/$1"
      }
    ]
  }